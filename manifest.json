{

  "description": "NoDistractions is a bloat-free website blocker with focus on ease of use and simplicity.",
  "manifest_version": 2,
  "name": "NoDistractions",
  "author": "Asciijakob",
  "version": "1.0.0",
  "homepage_url": "https://github.com/TBA",
  "browser_specific_settings": {
    "gecko": {
      "id": "NoDistractions@asciijakob"
    }
  },
  "icons": {
    "48": "assets/icon.png"
  },
  "browser_action": {
    "default_icon": "assets/icon.png",
    "default_title": "No Distractions",
    "default_popup": "/static/extension_popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "./node_modules/webextension-polyfill/dist/browser-polyfill.min.js",
        "noDistractions.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "/static/blocked/blocked.html"
  ],
  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "<all_urls>",
    "notifications",
    "webRequest",
    "webRequestBlocking"
  ],
  "background": {
    "scripts": [
      "./node_modules/webextension-polyfill/dist/browser-polyfill.min.js",
      "background.js"
    ]
  },
  "options_ui": {
    "page": "/settings/settings.html",
    "browser_style": true
  }
}
